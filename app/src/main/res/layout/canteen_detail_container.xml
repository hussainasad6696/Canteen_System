<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:textColor="@color/colorblue"
                android:id="@+id/management"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="115dp"
                android:layout_marginLeft="115dp"
                android:layout_marginEnd="115dp"
                android:layout_marginRight="115dp"
                android:text="management"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heading_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/management"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Handler:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:textColor="@color/colorblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/management"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/heading_handler"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_handler"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="Mobile:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number"
                android:textColor="@color/colorblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/mobile"
                android:text="023"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/no_of_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Of Workers:"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_below="@id/mobile"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textColor="@color/colorblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/no_of_worker"
                android:id="@+id/worker"
                android:layout_below="@id/number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/no_of_worker"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:id="@+id/address"/>
            <TextView
                android:textColor="@color/colorblue"
                android:id="@+id/addres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#House no"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_below="@id/worker"
                android:layout_toRightOf="@id/address"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>